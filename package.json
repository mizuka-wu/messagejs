{
  "name": "messagejs",
  "description": "A simple message toast without any dependencies",
  "keywords": [
    "message",
    "toast",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mizuka-wu/messagejs"
  },
  "types": "./dist/message.d.ts",
  "main": "./dist/message.umd.cjs",
  "version": "0.0.1",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/message.js",
      "require": "./dist/message.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "typescript": "~5.6.2",
    "vite": "^5.4.10",
    "vite-plugin-dts": "^4.3.0",
    "vitepress": "^1.5.0"
  }
}